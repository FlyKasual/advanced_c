{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "make",
            "args": [
                "DEBUG=1",
                "SOURCE_DIR=${fileDirname}",
                "OUT_DIR=${fileDirname}/../build",
                "INCLUDE_DIR=${fileDirname}/../include"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
